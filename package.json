{
  "name": "website",
  "private": true,
  "version": "1.0.0",
  "description": "Exploring a turnkey starting point for JS projects.",
  "main": "src/main.js",
  "scripts": {
    "beforebuild": "mkdir -p build && cp index.html build",
    "start": "npm run beforebuild && webpack-dev-server -d --inline",
    "start-production": "npm start -p --devtool sourcemap",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src/main.js",
    "postversion": "git push && git push --tags",
    "build-production": "npm run beforebuild && webpack -p --devtool sourcemap",
    "deploy": "npm run build-production && surge --domain jasonkuhrt.com --project ./build",
    "deploy-stage": "npm run build-production && surge --domain stage.jasonkuhrt.com --project ./build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jasonkuhrt/website.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jasonkuhrt/website/issues"
  },
  "homepage": "https://github.com/jasonkuhrt/website#readme",
  "dependencies": {
    "lodash": "^4.11.1",
    "react": "^15.0.1",
    "react-dom": "^15.1.0"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.7.7",
    "babel-core": "^6.7.7",
    "babel-eslint": "^6.0.3",
    "babel-loader": "^6.2.4",
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "css-loader": "^0.23.1",
    "eslint": "^2.8.0",
    "eslint-plugin-react": "^5.0.1",
    "file-loader": "^0.9.0",
    "style-loader": "^0.13.1",
    "surge": "^0.18.0",
    "webpack": "^1.13.0",
    "webpack-dev-server": "^1.14.1"
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-0"
    ]
  }
}
