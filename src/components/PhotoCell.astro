---
import type { Photo } from '../data/photographing/types'
import { Image } from 'astro:assets'
import { Icon } from 'astro-icon/components'

interface Props {
  photo: Photo
  expanded?: boolean
  onToggle?: string
}

const { photo, expanded = false } = Astro.props

// Get the first media item for the thumbnail
const firstMedia = photo.media[0]
const hasMultiple = photo.media.length > 1
const isVideo = photo.type === 'video'
---

<div class="photo-cell group relative aspect-square overflow-hidden bg-gray-100 dark:bg-gray-800">
  {
    firstMedia.type === 'image' ? (
      <Image
        src={firstMedia.path}
        alt={photo.caption || 'Photo'}
        width={800}
        height={800}
        class="block h-full w-full object-cover"
        loading="lazy"
        decoding="async"
      />
    ) : (
      <video src={firstMedia.path} class="block h-full w-full object-cover" controls />
    )
  }

  <!-- Series/Video indicators -->
  {
    hasMultiple && photo.type === 'series' && (
      <div class="series-icon absolute top-2 right-2 bg-black/60 text-white rounded-full p-2">
        <Icon name="carbon:image-copy" class="w-4 h-4" />
      </div>
    )
  }

  {
    isVideo && (
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 bg-black/60 text-white rounded-full p-4 pointer-events-none">
        <Icon name="carbon:play-filled" class="w-8 h-8" />
      </div>
    )
  }
</div>
