---
interface Props {
  columns?: number
  gap?: 'sm' | 'base' | 'lg'
  class?: string
}

const { columns = 12, gap = 'base', class: className } = Astro.props

const gapClasses = {
  sm: 'gap-4',
  base: 'gap-6',
  lg: 'gap-8',
}
---

<div
  class:list={[
    'grid w-full',
    columns === 12 && 'grid-cols-12',
    columns === 6 && 'grid-cols-6',
    columns === 4 && 'grid-cols-4',
    columns === 3 && 'grid-cols-3',
    columns === 2 && 'grid-cols-2',
    columns === 1 && 'grid-cols-1',
    gapClasses[gap],
    className,
  ]}
>
  <slot />
</div>
