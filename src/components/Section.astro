---
interface Props {
  spacing?: 'sm' | 'base' | 'lg' | 'xl'
  class?: string
}

const { spacing = 'base', class: className } = Astro.props

const spacingClasses = {
  sm: 'py-8',
  base: 'py-12',
  lg: 'py-16',
  xl: 'py-24',
}
---

<section class:list={[spacingClasses[spacing], className]}>
  <slot />
</section>
