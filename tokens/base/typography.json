{
  "typography": {
    "font": {
      "family": {
        "$type": "fontFamily",
        "sans": {
          "$value": ["Inter Variable", "-apple-system", "BlinkMacSystemFont", "Segoe UI", "sans-serif"],
          "$description": "Primary sans-serif with optical sizing"
        },
        "serif": {
          "$value": ["Newsreader Variable", "Georgia", "serif"],
          "$description": "Long-form reading serif with optical sizing"
        },
        "mono": {
          "$value": ["JetBrains Mono", "Consolas", "monospace"],
          "$description": "Code monospace with ligatures"
        }
      },
      "size": {
        "$type": "dimension",
        "xs": {
          "$value": "0.75rem",
          "$description": "12px",
          "$extensions": {
            "baseline": { "baselines": 3, "beneath": 1 }
          }
        },
        "sm": {
          "$value": "0.875rem",
          "$description": "14px",
          "$extensions": {
            "baseline": { "baselines": 3, "beneath": 1 }
          }
        },
        "base": {
          "$value": "1rem",
          "$description": "16px - Body text",
          "$extensions": {
            "baseline": { "baselines": 4, "beneath": 2 }
          }
        },
        "md": {
          "$value": "1.125rem",
          "$description": "18px",
          "$extensions": {
            "baseline": { "baselines": 4, "beneath": 2 }
          }
        },
        "lg": {
          "$value": "1.313rem",
          "$description": "21px",
          "$extensions": {
            "baseline": { "baselines": 5, "beneath": 2 }
          }
        },
        "xl": {
          "$value": "1.75rem",
          "$description": "28px - H3",
          "$extensions": {
            "baseline": { "baselines": 6, "beneath": 3 }
          }
        },
        "2xl": {
          "$value": "2.375rem",
          "$description": "38px - H2",
          "$extensions": {
            "baseline": { "baselines": 8, "beneath": 3 }
          }
        },
        "3xl": {
          "$value": "3.125rem",
          "$description": "50px - H1",
          "$extensions": {
            "baseline": { "baselines": 10, "beneath": 4 }
          }
        },
        "4xl": {
          "$value": "4.188rem",
          "$description": "67px - Display",
          "$extensions": {
            "baseline": { "baselines": 14, "beneath": 5 }
          }
        }
      },
      "weight": {
        "$type": "fontWeight",
        "light": { "$value": 300 },
        "regular": { "$value": 400 },
        "medium": { "$value": 500 },
        "semibold": { "$value": 600 },
        "bold": { "$value": 700 }
      }
    }
  }
}
