{
  "include": ["app/**/*", "**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "types": ["@react-router/node", "vite/client"],
    "paths": {
      "~/*": ["./app/*"]
    }
  }
}
